---
interface Props {
	title: string
	content: string
	date: Date
}

const { title, content, date }: Props = Astro.props
---

<div class='note'>
	<h3 class='text-xl'>{title}</h3>
	<time class='text-sm' datetime={date.toISOString()}>{date.toDateString()}</time>
	<div class='text-base'>{content}</div>
</div>
