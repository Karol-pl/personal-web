---
interface Props {
  class?: string
  id?: string
}

const { class: className, id } = Astro.props
---

<section class:list={['section-wrapper', className]} id={id}>
  <div class="section-inner">
    <slot />
  </div>
</section>

<style>
  .section-wrapper {
    border-bottom: 1px solid var(--grid-line);
    min-height: 100%;
    display: flex;
    flex-direction: column;
  }

  .section-wrapper:last-of-type {
    border-bottom: none;
  }

  .section-inner {
    width: min(100% - 2rem, 50rem);
    margin-inline: auto;
    padding-block: clamp(1rem, calc(2 / 50 * 100vw), 2rem);
    flex: 1;
  }

  @media (min-width: 50rem) {
    .section-inner {
      border-left: 1px solid var(--grid-line);
      border-right: 1px solid var(--grid-line);
      padding-inline: clamp(1rem, calc(2 / 50 * 100vw), 2rem);
    }
  }
</style>
